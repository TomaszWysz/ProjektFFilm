@model ProjektFFilm.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "FFilm";
    var authorizedUserName = "admin@admin.pl"; // Ustalona nazwa admina
    var userName = ViewBag.UserName as string;
    var isAuthorized = userName == authorizedUserName;
}

<h1>FFilm</h1>

<div class="navbar">
    @if (isAuthorized)
    {
        <a asp-action="Create">Dodaj nowy film</a>
    }
</div>

<form asp-controller="Movies" asp-action="Index" method="get">
    <p>
        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Movies.FirstOrDefault().Title)</th>
            <th>@Html.DisplayNameFor(model => model.Movies.FirstOrDefault().ReleaseDate)</th>
            <th>@Html.DisplayNameFor(model => model.Movies.FirstOrDefault().Genre)</th>
            <th>Kategoria wiekowa</th>
            <th>Działanie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>
                    <div>
                        <a asp-action="Details" asp-route-id="@item.Id"><img src="@item.ImageUrl" alt="Movie Poster" style="max-width: 100px; max-height: 150px;" /></a>
                    </div>
                    <div>
                        @Html.DisplayFor(modelItem => item.Title)
                    </div>
                </td>
                <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>
                    @if (isAuthorized)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn">Edytuj</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn">Szczegóły</a>
                    @if (isAuthorized)
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn">Usuń</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    @Html.PagedListPager(Model.Movies, page => Url.Action("Index", new { page, searchString = Model.SearchString, movieGenre = Model.MovieGenre }))
</div>
